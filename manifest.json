{
  "manifest_version": 3,
  "name": "Amazon Model Number Extractor",
  "version": "1.0",
  "description": "Extracts the model number from Amazon product pages for quicker scanning.",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.amazon.com/*"],
      "js": ["content.js"]
    }
  ]
}
